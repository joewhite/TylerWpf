<UserControl x:Class="Tyler.MapView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Tyler="clr-namespace:Tyler"
             Focusable="True" FocusVisualStyle="{x:Null}"
             KeyDown="UserControl_KeyDown"
             MouseDown="UserControl_MouseDown">
    <Grid>
        <Rectangle Fill="Black"/>
        <Canvas>
            <Rectangle Fill="Teal" Canvas.Left="8" Canvas.Top="40" Width="128" Height="112"/>
            <Rectangle Fill="Silver" Canvas.Left="8" Canvas.Top="8" Width="128" Height="40"/>
            <Tyler:HeroView x:Name="hero" Canvas.Left="64" Canvas.Top="96"/>
            <Path Fill="Silver" Data="M0,160 L8,152 H136 L144,160 V192 H0"/>
            <Path Fill="White" Data="M0,0 H144 V160 H0 V16 H16 V144 H128 V16 H0"/>
        </Canvas>
    </Grid>
</UserControl>
