<UserControl x:Class="Tyler.MapView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Tyler="clr-namespace:Tyler"
             Focusable="True" FocusVisualStyle="{x:Null}"
             KeyDown="UserControl_KeyDown"
             MouseDown="UserControl_MouseDown">
    <Grid>
        <Rectangle Fill="Black"/>
        <Canvas>
            <Rectangle Fill="Teal" Canvas.Left="16" Canvas.Top="48" Width="112" Height="96"/>
            <Rectangle Fill="Silver" Canvas.Left="16" Canvas.Top="16" Width="112" Height="32"/>
            <Tyler:HeroView x:Name="hero" Canvas.Left="64" Canvas.Top="96"/>
            <Rectangle Fill="Silver" Canvas.Left="0" Canvas.Top="160" Width="144" Height="32"/>
            <Path Fill="White" Data="M0,0 H144 V160 H0 V16 H16 V144 H128 V16 H0"/>
        </Canvas>
    </Grid>
</UserControl>
