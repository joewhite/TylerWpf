<UserControl x:Class="Tyler.MapView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Tyler="clr-namespace:Tyler"
             Focusable="True" FocusVisualStyle="{x:Null}"
             KeyDown="UserControl_KeyDown"
             MouseDown="UserControl_MouseDown">
    <Grid>
        <Rectangle Fill="Black"/>
        <Canvas Width="1" Height="1">
            <Canvas.LayoutTransform>
                <ScaleTransform ScaleX="16" ScaleY="16"/>
            </Canvas.LayoutTransform>
            <Canvas Name="scroller" Canvas.Left="-4" Canvas.Top="-6">
                <Rectangle Fill="Teal" Canvas.Left="0.5" Canvas.Top="2.5" Width="8" Height="7"/>
                <Rectangle Fill="Silver" Canvas.Left="0.5" Canvas.Top="0.5" Width="8" Height="2.5"/>
                <Tyler:HeroView x:Name="hero" Canvas.Left="4" Canvas.Top="6"/>
                <Path Fill="Silver" Data="M0,10 L0.5,9.5 H8.5 L9,10 V12 H0"/>
                <Path Fill="White" Data="M0,0 H9 V10 H0 V1 H1 V9 H8 V1 H0"/>
            </Canvas>
        </Canvas>
    </Grid>
</UserControl>
